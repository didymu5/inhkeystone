{{!< default}}
<div id="issue-banner" class="full-width {{data.issue.theme}}" style="background-image: url({{data.issue.coverImage.secure_url}});">
	

	<div class="issue-banner-title">
		<div id="sillywrp">
				<span class="issue-number-date">Issue #{{data.issue.issueNumber}} | {{date data.issue.publishedDate format='MMM YYYY'}}</span>
				<h2>{{data.issue.name}}</h2>
		</div>

	</div>
</div>
<div class="container">
	<!-- http://inheritancemag.com/assets/inheritance-solo.png -->
	<div class="row">
		
		<div class="lead-cover-text">
			
			<div class="lead">{{{data.issue.content.brief.html}}}</div>
		</div>
		
		{{#each data.posts}} 
		<div class="article-card">
			
			{{#if this.image.public_id }}<img src="{{this.image.secure_url}}" class="article-img">{{/if}}
			<h3><a href="/issues/{{this.issue.issueNumber}}/{{this.slug}}">{{this.title}}</a> <span>by {{#each this.author}}{{this.name.first}} {{this.name.last}}{{/each}}</span></h3>
			<div class="article-brief">
				{{{this.content.brief.html}}}
			</div>

		</div>
		{{/each}}
		
	</div> <!--row-->
</div>